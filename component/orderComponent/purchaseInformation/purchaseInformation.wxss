/* 订单人 */
.top {
  width: 686rpx;
  height: 218rpx;
  background: white;
  border-radius: 10rpx;
  display: flex;
  position: relative;
  margin-top: 20rpx
}
.top>view:nth-child(1) {
  font-size: 28rpx;
  color: #757575;
  width: 180rpx;
  margin-left: 20rpx;
}
.top>view:nth-child(1) view {
  padding-top: 25rpx;
  height: 40rpx;
}
.top>view:nth-child(2) {
  width: 490rpx;
  height: 100%;
  font-size: 28rpx;
}

.top>view:nth-child(2)>view {
  margin-top: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.top>view:nth-child(3) {
  padding-top: 11rpx;
  padding-left: 90rpx;
}

.top .img1 {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.top .ic1 {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 订单快照加联系职业顾问 */

.carList {
  width: 686rpx;
  height: 377rpx;
  background: white;
  margin-top: 24rpx
}

.carList .car {
  width: 650rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 33rpx;
  border-bottom: 1rpx solid #e1e1e1;
  padding-top: 24rpx;
  margin-left: 18rpx;
}

.carList .car>view:nth-child(1) image {
  width: 166rpx;
  height: 156rpx;
  background: white;
  border-radius: 10rpx;
}

.carList .car>view:nth-child(2) {
  width: 450rpx;
  height: 156rpx;
}

.carList .car>view:nth-child(2)>view {
  margin-top: 15rpx;
}

.carList .car>view:nth-child(2)>view:nth-child(1) {
  font-size: 30rpx;
  font-weight: 600;
}

.carList .car>view:nth-child(2)>view:nth-child(2) {
  font-size: 24rpx;
  color: #757575;
}

.carList .car>view:nth-child(2)>view:nth-child(3) {
  font-size: 28rpx;
}

.carList .Customerservice {
  width: 100%;
  height: 163rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.carList .Customerservice>view {
  width: 428rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-weight: 600;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative;
}

.carList .Customerservice van-icon {
  position: absolute;
  top: 6rpx;
  left: 90rpx;
}

