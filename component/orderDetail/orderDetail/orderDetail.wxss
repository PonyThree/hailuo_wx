/* component/orderDetail/orderDetail/orderDetail.wxss */


.wrap {
    width: 100%;
    background-color: #fff;
    height: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
}

.wrap .gold_wrap {
    padding: 30rpx 32rpx 46rpx;
    box-sizing: border-box;
    width: 100%;
}

.wrap .gold_wrap .gold_item {
    margin-bottom: 22rpx;
}

.wrap .gold_item:last-of-type {
    margin-bottom: 0;
}

.wrap .gold_item .title_wrap {
    height: 45rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.wrap .gold_item .title_wrap .title_name {
    height: 30rpx;
    line-height: 30rpx;
    font-size: 30rpx;
    color: #1b1b1b;
    width: 200rpx;
    font-weight: bold;
    flex-shrink: 0;
}

.wrap .gold_item .title_wrap .title_price {
    height: 32rpx;
    font-size: 32rpx;
    color: #1b1b1b;
    width: calc(100% - 100rpx);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-weight: bold;
}



.wrap .gold_item .title_wrap .title_price text:nth-of-type(1) {
    align-self: flex-end;
    font-size: 24rpx;
    color: rgb(155, 155, 155);
    font-weight: lighter;
}

.wrap .gold_item .title_wrap .title_price text:nth-of-type(2) {
    font-size: 24rpx;
    align-items: flex-end;
}


.wrap .gold_item .addition_wrap {
    margin-top: 20rpx;
    background-color: #f8f8f8;
    border-radius: 10px;
    padding: 22rpx 20rpx;
    box-sizing: border-box;

}

.wrap .gold_item .addition_item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 32rpx;
    width: 100%;
    margin-bottom: 20rpx;
}

.wrap .gold_item .addition_item:last-of-type {
    margin-bottom: 0;
}

.wrap .gold_item .addition_label {
    font-size: 24rpx;
    max-width: 400rpx;
    color: #1b1b1b;
    height: 32rpx;
    line-height: 32rpx;
}


.wrap .gold_item .addition_num {
    height: 32rpx;
    max-width: calc(100%);
    font-size: 24rpx;
    color: #1b1b1b;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.wrap .gold_item .addition_num text:nth-of-type(1) {
    font-size: 24rpx;
    align-self: flex-end;
    color: rgb(155, 155, 155);
}

.wrap .gold_item .addition_num text:nth-of-type(2) {
    font-size: 20rpx;
    align-self: flex-end;
}



.wrap .all_price {
    height: 212rpx;
    padding: 39rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    border-top: 1rpx solid #eee;
}

.wrap .price_item {
    height: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 17rpx;
}

.wrap .price_item:last-of-type {
    margin-bottom: 0;
}

.wrap .price_item .price_label,
.wrap .price_item .price_num {
    width: 150rpx;
    height: 100%;
    text-align: left;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #757575;
}

.wrap .price_item .price_num {
    width: calc(100% - 150rpx);
    text-align: right;
}

.wrap .price_item:nth-of-type(2) .price_num {
    color: #FA6D39;
}

.wrap .price_item .price_num text:nth-of-type(1) {
    font-size: 20rpx;
}