/* 项目列表 */
.plist{
    width:686rpx; 
    overflow: hidden
}
.items {
  width: 686rpx;
  height:auto;
  padding-top:30rpx;
  margin:0 auto;
  display: flex;
  position: relative;
  box-sizing: border-box;

  border-bottom:1px solid #ECECEC;
}
.items>image {
  height: 140rpx;
  width: 196rpx;
  /* margin-top: 40rpx; */
  border-radius: 8rpx;
}
.items>view.desc{ 
  height: 190rpx;
  width: 400rpx;
  overflow: hidden;
  margin-left: 38rpx;
  position: relative;

}
.items .text1 {
  display: inline-block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 700;
  white-space: nowrap;
  vertical-align: top;
  margin-top:6rpx;
}
.items .text2 {
  margin-top: 8rpx;
  font-size: 26rpx;
   color:#757575;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.items .text3 {
  font-size: 26rpx;
  color: #999999;


}
.items .time3 {
  background: #FFF9F9;
  width: 310rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #FA6D39;
  margin-top:10rpx;
  border-radius: 6rpx;
  line-height: 30rpx;
  border: 1rpx solid #FFE2D5;
  padding: 0 3rpx;
}

.items .item4 {
  background: #FFFDF3;
  width:95rpx;
  height: 30rpx;
  font-size: 22rpx;
  color: #1B1B1B;
  margin-top:10rpx;
  border-radius: 6rpx;
  line-height: 30rpx;
  border: 1rpx solid #F1E4A1;
  text-align: center
}
.ty_03{
  width: 64rpx !important;
  height: 28rpx !important;
  position: absolute !important;
  left: 0rpx;
  /* top: 40rpx; */
  margin: 0 !important;
  border-radius: 0 !important;
}
/* 扫码组件 */
.scanCode{
    position: relative;
    width: 540rpx;
    height: 615rpx;
    overflow: hidden;
    /* background-color: pink; */
}
.scanCode image.bg{
    position: absolute;
    width: 100%;
    height:615rpx;
    z-index: -1;
}
.scanCode .info{
    box-sizing: border-box;
    width: 100%;
    position: absolute;
    z-index: 100;
    height: 260rpx;
    top: 213rpx;
    padding-top:60rpx;
    text-align: center;
    /* background-color: #aaf; */
}
.scanCode .info >view:nth-child(1){
    color:rgb(51,51,51);
    font-size: 32rpx;
}
 .info .codeImg image{
    box-sizing: border-box;
    width:80rpx;
    height: 74rpx;
    margin:50rpx 0 30rpx 0;
    padding:10rpx;
    /* background-color: #afa; */
}
 .info .codeImg >view{
     font-size: 28rpx;
     height: 40rpx;
     line-height: 40rpx;
     margin-top: -15rpx;
     /* background-color: pink; */
     color: rgb(153,153,153)
}
.scanCode .btns1{
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100%;
    position: absolute;
    z-index: 100;
    bottom: 0;
    height: 80rpx;
    color: #ffffff;
    font-size:30rpx;
}
.scanCode .btns1>view{
  height: 100%;
  flex:1;
  text-align: center;
  line-height: 80rpx
}