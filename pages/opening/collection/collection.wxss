/* 开盘倒计时样式 */
.countDown {
  position:fixed;
  top:0;
  left:0;
  display: flex; 
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: white;
  background-color: #FA6D39;
  white-space:nowrap;
  z-index: 1000;
}

.countDown image {
  width: 27rpx;
  height: 27rpx;
  /* background-color: pink; */
  margin-right: 10rpx;
}

.countDown > view.time {
  margin-left: 10rpx;
}

view.time .timeDot {
  margin: 0 5rpx;
}
/* 蓝湖郡活动介绍样式 */
.desc{
    position: relative;
    box-sizing: border-box;
    width:686rpx;
    height:180rpx;
    padding-left:24rpx;
    color:rgb(51,51,51);
    background-color: rgb(255,255,255);
    border-radius: 10rpx;
    margin-top: 70rpx
}
.desc > view:nth-child(1){
    box-sizing: border-box;
    padding-top:24rpx;
    font-size:30rpx;
    font-weight:600;

}
.desc > view:nth-child(2){
    font-size:24rpx;
    margin-top:24rpx;
}

/* 收藏条数样式 */
.collectNum{
    box-sizing: border-box;
    width:686rpx;
    height:200rpx;
    margin-top: 20rpx;
    background-color: rgb(255,255,255);
    border-radius:10rpx;
}
.collectNum >view:nth-child(1){
    display: block;
    width:662rpx;
    margin:0 auto;
    height:100rpx;
    line-height: 100rpx;
    border-bottom:1px solid rgb(221,221,221);
    color:#757575;
    font-size:28rpx;
}
.collectNum >view.colTxt{
    font-size:24rpx;
    line-height: 40rpx;
    margin:10rpx 20rpx;
    color:rgb(153,153,153);
}
/* 收藏选购列表标题 */
