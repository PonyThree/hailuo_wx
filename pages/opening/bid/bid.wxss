/* pages/opening/bid/bid.wxss */
@import '/pages/order/subscription/subscription.wxss';

page {
  background-color: #f8f8f8 !important;
  padding-top: 60rpx;
}

/* 开盘倒计时样式 */

.countDown {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: white;
  background-color: #fa6d39;
  white-space: nowrap;
  z-index: 1000;
}

.countDown image {
  width: 27rpx;
  height: 27rpx;
  /* background-color: pink; */
  margin-right: 10rpx;
}

.countDown > view.time {
  margin-left: 10rpx;
}

view.time .timeDot {
  margin: 0 5rpx;
}



/* 收藏选购列表标题 */

.collectNum {
  position: fixed;
  right: 0;
  top: 400rpx;
  display: flex;
  align-items: center;
  width: 80rpx;
  height: 52rpx;
  line-height: 52rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-radius: 26rpx 0 0 26rpx;
  background: #ECECEC
}

.collectNum > text {
    margin-left: 10rpx;
  font-size: 28rpx;
  font-weight: 600
}
.collectNum >image {
  width: 40rpx;
  height: 35rpx;
}
