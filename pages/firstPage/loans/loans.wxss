/* pages/firstPage/loans/loans.wxss */
.wrap {
    width: 100%;
    position: relative;
    padding: 14rpx 18rpx 33rpx;
    box-sizing: border-box;
}

.wrap .head_img {
    width: 100%;
    height: 335rpx;
    margin-bottom: 50rpx;
}

.wrap .head_img image {
    width: 100%;
    height: 100%;
}

.wrap .content_box {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding: 0 6rpx;
    box-sizing: border-box;
}

.wrap .content_box .title {
    font-size: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: #333;
    border-left: 10rpx solid #E5C478;
    padding-left: 10rpx;
    font-weight: bold;
    width: 100%;
    margin-bottom: 50rpx;
}

.wrap .content_box .item {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}

.wrap .content_box .item:last-of-type {
    margin-bottom: 0;
}

.wrap .content_box .user_name,
.wrap .content_box .tel {
    height: 58rpx;
}

.wrap .content_box .money,
.wrap .content_box .car,
.wrap .content_box .location,
.wrap .content_box .deadline {
    height: 48rpx;
}

.wrap .content_box .item label {
    height: 100%;
    width: 140rpx;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #333;
}

.wrap .content_box .user_name .form_box,
.wrap .content_box .tel .form_box {
    padding-bottom: 20rpx;
}

.wrap .content_box .money .form_box,
.wrap .content_box .car .form_box,
.wrap .content_box .location .form_box,
.wrap .content_box .deadline .form_box {
    padding-bottom: 10rpx;
}


.wrap .content_box .item .form_box {
    height: 100%;
    width: 522rpx;
    border-bottom: 1rpx solid rgb(238, 238, 238);
    box-sizing: border-box;
}


.wrap .content_box .info {
    color: #999;
    font-size: 24rpx;
    margin-top: 60rpx;
    margin-bottom: 30rpx;
    width: 100%;
    height: 24rpx;
    text-align: center;
}

.wrap .content_box .item input {
    width: 100%;
    height: 100%;
    /* line-height: 37rpx; */
    /* min-height: 37rpx; */
    font-size: 28rpx;
    color: #333;
    font-family: "PingFang SC Regular";
    box-sizing: border-box;
}

.wrap .content_box .car .form_box,
.wrap .content_box .deadline .form_box,
.wrap .content_box .location .form_box {
    font-size: 28rpx;
    /* line-height: 37rpx; */
    display: flex;
    align-items: center;
    color: #333;
    padding-right: 50rpx;
    box-sizing: border-box;
    position: relative;
}

.wrap .content_box .car .form_box .item_icon,
.wrap .content_box .deadline .form_box .item_icon,
.wrap .content_box .location .form_box .item_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 30rpx;
    height: 16rpx;
    background-image: url("https://china185.com/file/image/20191029/8ed780e8da724fd0abc9c44b47b93108.png");
    background-size: cover;
}


.wrap .content_box .item .placeholderClass {
    font-size: 28rpx;
    color: #999;
    line-height: 37rpx;
}

.wrap .content_box .submit_btn {
    text-align: center;
    line-height: 80rpx;
    height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #E5C478;
    border-radius: 40rpx;
    width: 600rpx;
}


.wrap .footer {
    height: 60rpx;
    margin-top: 50rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}

.wrap .footer .bank_wrap {
    height: 100%;
    width: auto;
    display: inline-block;
    display: flex;
    align-items: center;
}

.wrap .footer .bank_info {
    height: 100%;
    font-size: 28rpx;
    color: #333;
    margin-right: 20rpx;
    line-height: 60rpx;

}

.wrap .footer .bank_box {
    height: 100%;
    display: flex;
}

.wrap .footer .bank_icon {
    width: 16rpx;
    height: 30rpx;
    background-image: url(https://china185.com/file/image/20191029/c613d7a87a5b4b41b2f77d3755692e66.png);
    background-size: cover;
}

.wrap .footer .bank_item {
    height: 100%;
    width: 60rpx;
    margin-right: 10rpx;

}

.wrap .footer .bank_item:last-of-type {
    margin-right: 20rpx;
}

.wrap .footer .bank_img {
    width: 100%;
    height: 100%;
}