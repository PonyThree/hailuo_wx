/* pages/firstPage/loans/detailMessage/detailMessage.wxss */
.wrap {
    width: 100%;
    position: relative;
    padding: 14rpx 18rpx 33rpx;
    box-sizing: border-box;
}

.wrap .head_img {
    width: 100%;
    height: 335rpx;
    margin-bottom: 50rpx;
}

.wrap .head_img image {
    width: 100%;
    height: 100%;
}

.wrap .content_box {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding: 0 6rpx;
    box-sizing: border-box;
}

.wrap .content_box .title {
    font-size: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    color: #333;
    border-left: 10rpx solid #E5C478;
    padding-left: 10rpx;
    font-weight: bold;
    width: 100%;
    margin-bottom: 50rpx;
}

.wrap .content_box .item {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    height: 40rpx;
}

.wrap .content_box .item:last-of-type {
    margin-bottom: 0;
}



.wrap .content_box .item label {
    height: 100%;
    width: 140rpx;
    font-size: 28rpx;
    line-height: 38rpx;
    color: #333;
}

.wrap .content_box .item .form_box {
    height: 100%;
    width: 522rpx;
    color: #bbb;
    line-height: 40rpx;
}


.wrap .content_box .info {
    color: #999;
    font-size: 24rpx;
    margin-top: 60rpx;
    margin-bottom: 30rpx;
    width: 100%;
    height: 24rpx;
    text-align: center;
}