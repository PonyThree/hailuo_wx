/* 推荐列表样式 */
.recomStyle{
    margin-top:20rpx;
    
}
.recomList{
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    box-sizing: border-box;
    width:702rpx;
    height:270rpx;
    padding:20rpx;
    margin: 20rpx auto;
    border-radius:10rpx;
    box-shadow:-5rpx 0rpx 20rpx 0 #cccccc;
    background-color: rgb(255,255,255);
    position: relative
}
.recomList1{
    margin:0 auto;
}
/* 列表头部样式 */
.recomList .listTop{
    display: flex;
    width:662rpx;
    height:180rpx;
    margin:0 auto 5rpx;
    padding-bottom:20rpx;
    border-bottom:1px solid rgb(221,221,221);
    overflow:hidden;
}
.listTop .listImg{
    width:160rpx;
    height:160rpx;
    margin-right:30rpx;
}
.listTop .listImg image{
    width:160rpx;
    height:160rpx;
    border-radius:12rpx;
}
.listTop .listDesc{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* border:1px solid #000; */
}
.listTil text:nth-child(1){
    color:rgb(51,51,51);
    font-size:30rpx;
    font-weight: bold;
}
.listTil text:nth-child(2){
    font-size:24rpx;
     color:rgb(51,51,51);
}   
.listDesc view:nth-child(2){
    font-size:24rpx;
    color:rgb(119,119,119);
}
.listFeature{
    width:376rpx;
    height:60rpx;
    overflow-x: auto;
    white-space: nowrap;
}
.listFeature text{
    display: inline-block;
    height:30rpx;
    line-height: 30rpx;
    padding:10rpx;
    font-size:24rpx;
    margin-left:10rpx;
    border-radius:5rpx;
    background-color: rgb(205,197,164);
    color:rgb(255,255,255);
}
/* 列表底部样式 */
.listBom{
    display: flex;
    justify-content: space-between;
    margin-top:10rpx;
    /* border:1px solid #000; */
}
.listBom .price text:nth-child(1){
    font-size:48rpx;
    line-height: 22rpx;
    margin-right:20rpx;
    color:rgb(169,33,18);
}
.listBom .price text:nth-child(2){
    width:59rpx;
    text-decoration: line-through;
    font-size:24rpx;
    color:rgb(153,153,153);
}
.listBom view:nth-child(2){
    /* border:1px solid #f00; */
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.listBom view:nth-child(2) text:nth-child(1){
    float:left;
    padding-right:20rpx;
}
.listBom view:nth-child(2) text:nth-child(2){
    float:right;
}
.listBom view:nth-child(2) text{
    font-size: 24rpx;
    color:rgb(51,51,51);
    margin-top:10rpx;
}
.sale{
  position: absolute;
  background: rgba(119,119,119,.5);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  line-height: 270rpx;
  font-size: 48rpx
}