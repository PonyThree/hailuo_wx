@import '/component/step/step.wxss';  /* 引入步骤条css */
.page {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx
}

/* 顶部时间 */
.toptime {
  width: 350rpx;
  height: 40rpx;
  background: #c4bc94;
  position: fixed;
  z-index: 9;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  color: rgb(169, 33, 18);
  font-size: 24rpx;
  right: -230rpx
}
.toptime image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
  margin-right: 20rpx
}
.toptimetran{
  right: 0;
  transition: all 1s
}
/* 待确认提示 */
.confirm {
  height: 162rpx;
  width: 100%;
  background: #FA6D39;
  border-radius: 10rpx;
  margin-top: 20rpx;
  position: relative;
  font-size: 28rpx;
  padding: 20rpx 54rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  color: white;
  box-sizing: border-box
 
  

}
.confirm>view:nth-child(1) {
width: 584rpx;

}
.confirm>view:nth-child(2) {
width: 584rpx;
font-size: 26rpx
