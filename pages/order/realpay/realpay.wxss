/* 订单描述 */

.Orderdescription {
  margin-top: 20rpx;
  font-size: 28rpx;
  width: 100%;
  background: white;
  border-radius: 10rpx;
  position: relative;
  padding: 20rpx ;
  box-sizing: border-box;
  display: flex;
  color: #777;
}

.Orderdescription>button {
  position: absolute;
  width: 90rpx;
  height: 40rpx;
  border-radius: 20rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  padding: 0;
  background: white;
  border: 1rpx solid #ab9f67;
  color: #ab9f67;
  right: 20rpx;
  top: 15rpx;
}
.Orderdescription>.img1 {
  position: absolute;
  width: 100rpx;
  height: 75rpx;
  right: 20rpx;
  top: 80rpx;
  opacity: .7
}
.Orderdescription>.img2 {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: 30rpx;
  top: 70rpx;
  opacity: .7
}
.Orderdescription>view:nth-child(1) {
  width: 230rpx;
  height: 100%;
}

.Orderdescription>view:nth-child(1)>view {
  padding-top: 16rpx;
}

.Orderdescription>view:nth-child(2) {
  width: 400rpx;
  height: 100%;
  text-align: right;
  overflow: hidden
}

.Orderdescription>view:nth-child(2)>view {
  padding-top: 16rpx;
}

/* 支付方式 */

.pay {
  width: 100%;
  height: 272rpx;
  margin-top: 20rpx;
  background: white;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.pay>view:first-child {
  padding-top: 34rpx;
  font-size: 36rpx;
  margin-left: 24rpx;
}

.pay>view:nth-child(2) {
  width: 600rpx;
  height: 200rpx;
  padding-left: 80rpx;
}

.pay .img1 {
  position: absolute;
  width: 37rpx;
  height: 37rpx;
  left: 40rpx;
  top: 108rpx;
}

.pay .img2 {
  position: absolute;
  width: 37rpx;
  height: 37rpx;
  left: 40rpx;
  top: 190rpx;
}

