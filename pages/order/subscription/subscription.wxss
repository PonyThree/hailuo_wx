/* 置业顾问信息 */

.adviser {
  width: 100%;
  height: 90rpx;
  background: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.adviser image {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 15rpx 10rpx 15rpx 20rpx;
}

.adviser i-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.adviser .ownership {
  display: inline-block;
  float: left;
  margin-top: 25rpx;
}

.ownership text {
  color: #333;
  font-size: 26rpx;
