/* pages/project/search/search.wxss */

/* 搜索 */

page {
  background: white;
}

.top {
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 15rpx;
  background: #f2f2f2;
}

.top .img2 {
  width: 21rpx;
  height: 21rpx;
  margin-left: -25rpx
}

.top .search {
  width: 560rpx;
  height: 60rpx;
  padding-left: 150rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-radius: 5rpx;
  background: white;
  margin-left: 95rpx;
  box-sizing: border-box;
  position: relative;
}

.top .search .radio {
  position: absolute;
  left: 20rpx;
  border-right: 1px solid #ccc;
  padding-right: 40rpx;
}

.top .search .img1 {
  width: 20rpx;
  height: 11rpx;
  position: absolute;
  right: 10rpx;
  top: 13rpx;
}

.top .search .img3 {
  width: 100rpx;
  height: 139rpx;
  position: absolute;
  z-index: 5;
  left:0rpx;
  top: 70rpx;
  background-image:url( https://www.china185.com/static/image/qipaokuang.png);
  background-size: cover;
  box-shadow: 0 0 30rpx 5rpx #f2f2f2;
  text-align: center;
}
.top .search .img3>view{
  padding-top: 20rpx
}


.top .search>input {
  height: 60rpx;
  width: 100%;
  margin-left: 20rpx;
}

/* 历史搜索 */

.history {
  height: 90rpx;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 600;
}

.history image {
  width: 36rpx;
  height: 36rpx;
}

.historylist {
  width: 100%;
  padding: 0 24rpx;
  height: 500rpx;
  min-height: 400rpx;
  max-height: 401rpx;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 28rpx;
}

.historylist>view {
  min-width: 100rpx;
  display: inline-block;
  height: 50rpx;
  border-radius: 30rpx;
  background: #eee;
  text-align: center;
  line-height: 50rpx;
  padding: 4rpx 10rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

/* 搜索标签 */

.lable {
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.lable>view {
  height: 50rpx;
  width: 150rpx;
  text-align: center;
  border-right: 1rpx solid #ddd;
  color: #63bbf2;
}

.lable>view:last-child {
  border: none;
}
