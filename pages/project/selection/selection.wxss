/* 头部选择层 */

.top {
  
  height: 120rpx;
  overflow-x: auto;
  white-space: nowrap;
  width: 750rpx;
}
.top view {
  display: inline-block;
  height: 60rpx;
  background: #ddd;
  font-size: 30rpx;
  color: white;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 25rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.top view:nth-child(1){
  margin-left: 0
}
/*缩放图 */
.centerImage {
  width: 100%;
  height: 750rpx;
  background: red;
  position: relative;
}
/* 选择栋 */
.centerImage .right {
  font-size: 28rpx;
  width: 110rpx;
  position: absolute;
  right: -24rpx;
  top: 40rpx;
  text-align: center;
  background: white;
  border-radius: 5rpx;
  box-shadow: -3px 0px 5px 1px rgba(0, 0, 0, 0.1);
}
.centerImage .right scroll-view {
  overflow-y: auto;
  height: 500rpx;
}
.centerImage .right scroll-view view {
  border: 1rpx solid #ddd;
  text-align: center;
  width: 90rpx;
  margin-left: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  border-radius: 3rpx;
}
.centerImage .right scroll-view view:nth-child(1) {
  margin-top: 20rpx;
}

.centerImage .right>view:nth-child(1) {
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.centerImage .right>view:nth-child(3) {
  height: 70rpx;
  line-height: 70rpx;
  border-top: 1rpx solid #eeeeee;
}
.button {
  background: #e5c478;
  width: 600rpx;
  height: 80rpx;
  color: white;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin-top: 25rpx;
}
.topActive {
  background: #e5c478 !important;
}
.rightActive {
  background: #fdf5e1;
  color: #e49f00;
  border: none !important;
}
movable-view {
  height: 300rpx;
  width: 300rpx;
  background-position: center;
  background-size: 100%,100%;
  background-repeat: no-repeat
}
