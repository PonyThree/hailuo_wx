/* 切换内容 */
.content{
  width: 686rpx;
  height: 430rpx;
  background: #ffffff;
  border-radius:10rpx;
  overflow: hidden;
  margin:  24rpx auto;
}
/* 头部 */
.head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 638rpx;
  height: 100rpx;
  margin: 0 auto;
  /* background-color: pink; */
}
.head .til{
  display: flex;
  align-items: center;
  height: 100rpx;
  /* background-color: #aaf; */
}
.til >view >text{
  font-size: 28rpx;
  color: #1B1B1B;
  font-weight: bold;
}
.til >view >text:nth-child(2){
  font-weight: normal;
}
.til image{
  width:10rpx;
  height:17rpx;
  margin-left: 10rpx;
  margin-top: 8rpx;
  vertical-align: middle;
}
.head >text{
  font-size: 28rpx;
  color: #FA5D43;
}
/* 项目信息 */
.project{
  width:638rpx;
  height: 300rpx;
  margin: 0 auto;
  overflow: hidden;
  /* border:1px solid #aaf; */
}
.project .info{
  display: flex;
  padding:24rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  width:638rpx;
  height: 206rpx;
  border-radius: 10rpx;
  background-color: #F5F5F5;
  /* border:1rpx solid #aaaaaa; */
}
.info >image{
  width: 166rpx;
  height: 156rpx;
  border-radius: 10rpx;
}
/* 右边信息 */
.info .desc{
  width: 420rpx;
  height: 156rpx;
  margin-left: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* background-color: #ffa; */
}
.desc >text{
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.desc >view.loc{
  width: 100%;
  height: 40rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #757575;
}
/* 价格 */
.info .price{
  display: flex;
  align-items: center;
  width: 100%;
  height: 40rpx;
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.price >text{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #757575;
}
.price >text:nth-child(1){
  font-size: 28rpx;
  line-height: 40rpx;
}
.price >text.oprice{
  text-decoration: line-through;
  margin-top: 4rpx;
}
.offerPrice{
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 24rpx;
}
.offerPrice text{
  color: #1B1B1B;
  line-height: 40rpx;
  font-weight: bold;
}
.offerPrice text:nth-child(1){
  font-size: 24rpx;
}
.offerPrice text:nth-child(2){
  font-size: 31rpx;
}
/* 底部按钮 */
.project .pBtns{
  float: right;
  margin-right: 20rpx;
  /* width: 380rpx; */
  width: 638rpx;
  height: 62rpx;
  line-height: 62rpx;
  margin-top: 30rpx;
}
.project .pBtns::after{
  display: block;
  content:'';
  clear: both;
}
.pBtns text{
  float: right;
  width: 168rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 32rpx;
  text-align: center; 
}
.pBtns text:nth-child(2){
  margin-right: 36rpx;
}
