/* pages/my/my/my.wxss */
page{
  background-color: #ffffff!important;
}
.pages{
  position:relative;
  background: #ffffff!important;
}
/* 个人信息  */
.top{
  width: 686rpx;
  height: 370rpx;
  border-radius: 10rpx 10rpx 0 0;
  background-color: #FFD46A;
  left: 0;
  right: 0;
  top: 30rpx;
  margin: auto;
}
.personalInfo{
  display: flex;
  width: 623rpx;
  height: 200rpx;
  margin: 30rpx  auto 0;
  /* background-color: #aaf; */
  border-bottom: 1px solid #FFE7AB;
}
.personalInfo view:nth-child(1){
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  margin-top: 40rpx;
  border:1px solid #ffffff;
  overflow: hidden;
  border-radius: 60rpx;
}
.personalInfo view image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.personalInfo  .myInfo{
  display: flex;
  flex-direction: column;
  height: 100rpx;
  margin-top: 60rpx;
  justify-content: space-between;
}
.myInfo text:nth-child(1){
  font-size: 42rpx;
  font-weight: bold;
  color: #1B1B1B;
}
.myInfo text:nth-child(2){
  font-size: 22rpx;
  color: #1B1B1B;
}
/* 底部钱包余额 */
.money{
  display: flex;
  width: 623rpx;
  height: 84rpx;
  /* background-color: pink; */
  margin: 36rpx auto 0;
}
.money >view{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  width:311rpx;
  height: 84rpx;
}
.money >view text{
  font-size: 28rpx;
  color: #484848;
}
.money >view:nth-child(1) text:nth-child(1){
  font-size: 36rpx;
  color: #1B1B1B;
  font-weight: bold;
}
.money >view:nth-child(1){
  border-right: 1px solid #FFE7AB;
}
/* 各个页面展示信息 */
.content{
  position: absolute;
  top: 340rpx;
  width: 100%;
  background: #ffffff;
  margin-top: 20rpx;
  box-shadow: 0px -3px 30px 0px rgba(54,54,54,0.16);
}
.content .li{
  width: 686rpx;
  height: 126rpx;
  display: flex;
  align-items: center;
  margin-left: 32rpx;
  border-bottom:1px solid #ECECEC;
}
.li image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.li  .main{
  width: 92%;
  height: 126rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.li  .main text{
  color: #646464;
  font-size: 32rpx;

}
.li  .main image{
  width: 10rpx;
  height: 17rpx;
}
/* 客服热线 */
.customer{
  display: inline-block;
  margin:62rpx 289rpx 60rpx 290rpx;
}
.customer image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.customer view{
  float: left;
  font-size:22rpx;
  color:  #989898;
  letter-spacing: 2rpx;
  margin-left:22rpx;
  height: 40rpx;
  line-height: 42rpx;
  margin-top: 0;
}
.showUrl{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 0;
  bottom: 0;
}