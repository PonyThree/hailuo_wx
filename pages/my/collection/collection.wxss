/* pages/my/collection/collection.wxss */
page{
  height: 100%;
}
.title{
  width: 100%;
  background: #ffffff;
  border-top: 1rpx solid #dddddd;
}
/* 收藏个数 */
.title .number{
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
}
.title .number view{
  display: inline-block;
  line-height: 100rpx;
  float: left;
  color: rgb(0,0,3);
  font-size: 28rpx;
  letter-spacing: 2rpx;
}
.title .number view span{
  color:rgb(251,59,15); 
}
.title .number text{
  display: inline-block;
  height: 90rpx;
  float: right;
  line-height: 90rpx;
  color: #777777;
  font-size: 26rpx;
  letter-spacing: 2rpx;
}
/* 列表 */
swiper{
  width: 100%;
  height: 150%;
  padding-bottom: 200rpx;
}
.style{
  width: 100%;
  height: 260rpx;
  margin-top: 50rpx;
  bottom:20rpx;
  position: relative;
}
.radio{
  float: left;
  padding: 0;
  position: absolute;
  top:45%;
  left: 24rpx;
  z-index: 1;
}
.content{
  width: 702rpx; 
  height:260rpx;
  background: #ffffff;
  margin: 20rpx 22rpx 0 22rpx;
  border-radius: 15rpx;
  float: left;
  z-index: 2;
  position: absolute;
  padding-bottom: 30rpx;
}
.is_checked{
  left: 90rpx;
}
.normal{
  left: 0rpx;
}
.head{
  width: 95%;
  height: 70rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #dddddd;
}
.head text{
  display: inline-block;
  color: #777777;
  font-size: 28rpx;
  height: 100%;
  line-height: 70rpx;
  float: left;
}
.head image{
  width: 36rpx;
  height: 36rpx;
  float: right;
  margin-top:16rpx; 

}
.project{
  position: relative;
  width:100%;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #ffffff;
  margin: 0 auto;
  border-radius: 15rpx;
  /* background-color: #faf; */
}
.project .top{
  width: 702rpx;
  /* height: 202rpx; */
  margin: 0 auto;
  box-sizing: border-box;
  /* background-color: #ffa; */
}
.project .top .tagview{
  width: 100%;
  height: 80rpx;
  overflow-x: auto;
  white-space: nowrap;
  /* margin-top: 20rpx; */
  /* background-color: #aaf; */
}
/* 左边图片 */
.project .top image{
  width:200rpx;
  height: 180rpx; 
  float: left;
  border-radius: 5rpx;
  margin: 20rpx 30rpx 0 0;
}
/* 右边文字内容 */
.project .top .right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 470rpx;
  float: left;
  height: 250rpx;
  margin-top:20rpx;
}
.project .top .right view{
  width:450rpx;
  float:left;
}
.project .top .right view:nth-child(1){
    white-space: wrap;
}
.top .right view span{
  font-size: 28rpx;
  font-weight: 600;
  color: #515151;
}
.project .top .right image{
  width: 26rpx;
  height: 30rpx;
  float: right;
  border-radius:5rpx;
  padding:10rpx;
  margin:20rpx 0 0 0;
}
.project .top .right .good{
  color: #777777;
  font-size: 25rpx;
  float: left;
  letter-spacing: 2rpx;
  margin-top: 22rpx;
}
.project .top .right .tag{
  display: inline-block;
  background: #f0f0f0;
  color:#999999;
  font-size: 22rpx;
  padding: 6rpx 14rpx 10rpx 14rpx;
  letter-spacing: 2rpx;
  border-radius: 8rpx;
  /* margin-top: 26rpx; */
  margin-right: 20rpx;
}
.project .bottom{
  width: 95%;
  margin: 0 auto; 
  overflow: hidden;
  line-height: 70rpx
}
.project .right .money{
  display: inline-block;
  font-size: 24rpx;
  letter-spacing: 1rpx;
  
}
.project  .right .money span:nth-child(1){
  color:rgb(251,59,15);
  font-size: 32rpx;
  margin-right:20rpx;
}
.project .right .money span:nth-child(2){
  color: rgb(153, 153, 153);
  font-size: 24rpx;
  text-decoration: line-through;
}
.project .money .number{
  display: inline-block;
  color: rgb(192,192,192);
  letter-spacing: 1rpx;
  padding-top: 4rpx;
  box-sizing: border-box;
}
.project  .number span{
  font-size: 24rpx!important;
  color: rgb(192,192,192)!important;
  font-weight: normal !important;
}
.project  .number span:nth-child(2){
    padding:0 10rpx;
    margin-top: -5rpx;
    color: rgb(192,192,192);
    font-size:24rpx;
    vertical-align: middle;
    font-weight: normal!important;
}
.project .delImg{
    position: absolute;
    right: 20rpx;
    bottom: -2rpx;
}   
/* 收藏为空 */
.main{
  width: 100%;
  float: left;
}
.main image{
  width: 320rpx;
  height: 200rpx;
  display: block;
  margin: 188rpx auto 0;
}
.main text{
  width: 100%;
  display: block;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  margin-top: 48rpx;
  letter-spacing: 1rpx;
}
.main button{
  width: 600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ab9f67;
  text-align: center;
  line-height: 90rpx;
  letter-spacing: 1rpx;
  color: #ab9f67;
  font-size: 30rpx;
  margin-top: 170rpx;
}
/* 底部全选 */
.drawer{
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-top:1rpx solid #cccccc;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
}
.radios{
  margin-left: 23rpx;
  margin-top: 26rpx;
  float: left;
  display: block;
  padding-bottom: 10rpx;
}
.drawer text{
  display: inline-block;
  line-height: 100rpx;
  height: 100rpx;
  color: #333333;
  font-size:26rpx; 
  float: left;
  margin-left: 20rpx;
  letter-spacing: 1rpx;
}
.drawer button{
  width: 200rpx;
  height: 70rpx;
  background: #ab9f67;
  color: #ffffff;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  border-radius: 35rpx;
  float: right;
  margin: 16rpx 24rpx 0 0;
}
.block{
  display: block;
}
.none{
  display: none;
}