/* 零钱信息 */
.content{
  width: 80%;
  margin: 84rpx auto;
}
.content image{
  width: 110rpx;
  height: 110rpx;
  display: block;
  margin: 0 auto;
}
.content text{
  display: block;
  color: #333333;
  font-size:24rpx; 
  text-align: center;
  margin-top: 15rpx;
  letter-spacing: 2rpx;
  padding-left: 8rpx;
  box-sizing: border-box;
}
.content text:nth-of-type(2){
  font-size: 58rpx;
  letter-spacing: 0;
  padding-left: 0;
  font-weight: 600;
}
.content text:nth-of-type(3){
  color:#999999;
  font-size: 24rpx;
  letter-spacing: 0;
  margin-top: 30rpx;
}
.content button{
  width:100%;
  height: 90rpx;
  border-radius: 45rpx;
  margin-top:  48rpx;
  border: none;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  line-height: 90rpx;
}
.content .recharge{
  margin-top: 130rpx;
  background: #ab9f67;
  color: #ffffff;
}
.content .cash{
  border: 1rpx solid #ab9f67;
  color: #ab9f67;
  background: none;
}
/* 零钱记录 */
.bottom{
  width: 100%;
  color: #999999;
  font-size: 28rpx;
  text-align: center;
  margin: 218rpx 0 40rpx 0;
  letter-spacing: 1rpx;
  padding-left: 14rpx;
  box-sizing: border-box;
}
