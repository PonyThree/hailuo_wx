/* pages/my/  contact/  contact.wxss */
.title{
  width: 100%;
  height: 90rpx;
  background: #ffffff;
  border-top:1rpx solid #f2f2f2;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.title text{
  display: inline-block;
  color: #333333;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  letter-spacing: 2rpx;
  float: left;
}
.title view{
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  color: #777777;
  font-size: 28rpx;
  float: right;
  letter-spacing: 1rpx;
}
.title view span{
  color: #a92112;
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 0;
}
.title view span i{
  font-size: 20rpx;
}
/* 扫码解冻 */
.content{
  width: 100%;
  height: 594rpx;
  background: #b7ae85;
}
.content .main{
  width: 94%;
  height: 552rpx;
  float: left;
  background: #ffffff;
  margin: 20rpx 24rpx 22rpx;
  border-radius: 10rpx;
}
.content .main view{
  width: 100%;
  color: #777777;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  text-align: center;
  margin-top: 40rpx;
  float: left;
}
.content .main image{
  width: 350rpx;
  height: 350rpx;
  float: left;
  margin: 40rpx 175rpx 0 180rpx;
}
.content .main text{
  display: inline-block;
  width: 100%;
  color: #333333;
  font-size: 26rpx;
  text-align: center;
  letter-spacing: 1rpx;
}
/* 置业顾问信息 */
.info{
  width: 100%;
  margin-top: 60rpx;
  padding-left: 198rpx;
  box-sizing: border-box;
  overflow: hidden
}
.info image{
  width: 106rpx;
  height: 106rpx;
  display: block;
  float: left;
}
.info .detail{
  width:400rpx; 
  margin: 22rpx 0 0 20rpx;
  float: left;
  letter-spacing: 1rpx;
}
.info .detail view{
  color: #333333;
  width: 100%;
  font-size: 24rpx;
  float: left;
}
.info .detail view:last-child{
  margin-top: 14rpx;
  letter-spacing: 0;
}
/* 客服热线 */
.customer{
height: 200rpx;width: 100%;
display: flex;
align-items: center;
justify-content: center
  
}
.customer image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.customer view{
  float: left;
  font-size:22rpx;
  color:  #999999;
  letter-spacing: 2rpx;
  margin-left:22rpx;
  height: 40rpx;
  line-height: 42rpx;
  margin-top: 0;
}