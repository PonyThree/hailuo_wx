/* pages/my/drop_code/drop_code.wxss */
page{
  width: 750rpx;
}
.pages{
  position: relative;
  padding-top: 20rpx;
  box-sizing: border-box;
  width: 750rpx
}
.writeOffCode{
  width: 686rpx;
  height: 850rpx;
  margin: 24rpx auto 0;
  overflow: hidden;
  /* border:1px solid #000000; */
  border-radius: 20rpx;
}
.writeOffCode .til{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 30rpx;
}
.til image{
  width:30rpx;
  height:30rpx;
  margin-left: 30rpx;
  margin-right: 16rpx;
}
.writeOffCode .codeInfo{
  box-sizing: border-box;
  width: 100%;
  height: 730rpx;
  padding-top: 80rpx;
