/* 倒计时 */
.data{
  width: 110rpx;
  height: 40rpx;
  background: #c4bc94;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  position: absolute;
  right: 0;
  top:8rpx;
}
.data image{
  width:22rpx;
  height: 22rpx; 
  float: left;
  margin: 9rpx 8rpx 9rpx 9rpx;
}
.data text{
  display: inline-block;
  float: left;
  color:#a92112;
  font-size: 22rpx;
  letter-spacing: 1rpx;
  margin-top: 4rpx;
}
/* 订单信息 */
.info{
  width: 94%;
  height: 182rpx;
  background: #ffffff;
  margin: 0 auto;
  border-radius: 15rpx;
}
.info image{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin: 65rpx 20rpx 66rpx 21rpx;
}
.info .main{
  float: left;
  width: 80%;
  height: 100%;
}
.info .main .name{
  width: 100%;
  color: #333333;
  font-size:25rpx;
  letter-spacing: 1rpx;
  margin-top: 24rpx;
}
.info .main .name1{
  width: 100%;
  color: #333333;
  font-size:25rpx;
  letter-spacing: 1rpx;
  margin-top: 16rpx;
}
.info .main span{
  margin-left: 38rpx;
  letter-spacing: 0;
  font-size: 26rpx;
}
.info .main i{
  font-size: 26rpx;
}
.info .main .code{
  width: 100%;
  color: #333333;
  font-size:25rpx;
  letter-spacing: 1rpx;
  margin-top: 18rpx;
}
.info image:last-child{
  width: 12rpx;
  height: 22rpx;
  float: right;
  margin: 80rpx 20rpx 0 0;
}
/* 核销码 */
.drop{
 position: relative;
  width: 502rpx;
  height: 620rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-top: 20rpx;
  margin-bottom: 20rpx
}
.drop .img{
  width: 502rpx;
  height: 620rpx;
  /* box-shadow: -5px 5px 10px -4px #d1d1d1,5px 5px 10px -4px #d1d1d1; */
  display: block;
  position: absolute;
  top:0;
  left: 0;
}
.drop .title{
  width: 500rpx;
  height: 100rpx;
  position:absolute; 
  top:0;
  left: 0;
  color: #ffffff;
  font-size:32rpx;
  letter-spacing:3rpx; 
  text-align: center;
  line-height: 100rpx;
}
.drop .font{
  width: 500rpx;
  position:absolute; 
  top:127rpx;
  left: 0;
  color: #777777;
  font-size:24rpx;
  letter-spacing:1rpx; 
  text-align: center;
}

.drop .num{
  width: 500rpx;
  color: #333333;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
  top:554rpx;
}
