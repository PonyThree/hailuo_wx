/* pages/personalRental/wantBuy/wantBuy.wxss */

page {
    background: #fff !important;
}

.rentCarEdit {
    width: 750rpx;
    border-top: 1px solid #eee;
}

/* 租售信息 */

.rentCarEdit .info {
    width: 702rpx;
    height: auto;
    margin:0 24rpx 0;
}

.info .singleOne {
    display: flex;
    align-items: center;
    /* background-color: #aaf; */
}

.info >view {
    display: flex;
    border-bottom: 1px solid #eee;
    /* margin-bottom: 30rpx; */
}

.info >view.singleOne {
    display: flex;
    height: 90rpx;
    align-items: center;
    /* background-color: pink; *//* border-top: 1px solid #eee; *//* border-bottom: 1px solid #eee; */
}
.info >view.singleOne.singleSpecial{
    height: auto;
    padding: 30rpx 0;
    /* background-color: #ffa; */
}
.info >view.singleOne.singleSpecial textarea{
    width: 550rpx!important;
    margin-left:24rpx;
    color: #777777;
    font-size: 28rpx;
    padding: 0 10rpx;
    line-height: 34rpx;
    /* background-color: #aaf; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: wrap;
}
.info >view>text:nth-child(1) {
    width: 114rpx;
    /* background-color: pink; */
    font-size: 28rpx;
    text-align: left;
    
}

.info .singleOne >input {
    /* width: 400rpx; *//* border:1px solid  #eeeeee; */
    margin-left: 30rpx;
    font-size: 28rpx;
    color: #777;
}
.info >view.singleSpecial{
    display: flex;
    align-items: center;
    height: 90rpx;
    line-height: 90rpx;
}
.info view.singleSpecial text{
    display: block;
    width: 140rpx;
}
.info view.singleSpecial >input{
    width: 140rpx;
    font-size: 28rpx;
    color: #777;
}
/* 租金详情选择框 */

.thaw {
    width:auto;
    display: flex;
    align-items: center;
    height: 100%;
    float: left;
    margin-left: 30rpx;
    font-size: 28rpx;
}

.thaw text {
    /* width: 200rpx; */
    display: inline-block;
    color: #777777;
    padding:0 10rpx;
    font-size: 28rpx;
}

.thaw image {
    width: 20rpx;
    height: 11rpx;
    margin-left: 10rpx;
}

/* 解冻下拉框选项 */

.opition {
    background: #fff;
    width: 158rpx;
    color: #333;
    font-size: 24rpx;
    line-height: 40rpx;
    position: absolute;
    top: 70rpx;
    left: 120rpx;
    text-align: center;
    letter-spacing: 4rpx;
    z-index: 999;
    box-shadow: 0 0 5px #999;
    border-radius: 4rpx;
}

.opition_one {
    height: 60rpx;
    line-height: 60rpx;
}
.van-checkbox{
    margin-left:30rpx;
    
    
}
.van-checkbox__icon-wrap,.van-checkbox__label{
    font-size: 28rpx;
    color: #777777!important;
}
/* 意向标签 */

.farTag {
    /* display: flex; */
    /* align-items: center; */
    height: auto;
    padding-top:30rpx;
    /* padding:20rpx 0; */
}

.farTag >text.til {
    /* margin-top:-20rpx; */
    width: 140rpx !important;
    text-align: left;
}

.tagList {
    color: #777;
    /* padding: 28rpx 0; */
    padding-bottom:28rpx;
}

/* 单个标签 */

.tagList .tagItem {
    position: relative;
    float: left;
    font-size: 28rpx;
    margin-right: 10rpx;
    padding: 5rpx 15rpx;
    border-radius: 2rpx;
    margin-top: 6rpx;
    margin-left: 10rpx;
    background-color: #f0f0f0;
}

.tagItem image {
    position: absolute;
    top: -12rpx;
    right: -5rpx;
}

.addTag {
    display: inline-block;
    width: 80rpx;
    height: 20rpx;
    line-height: 20rpx;
    padding: 8rpx 10rpx;
    border: 1px dashed #eee;
    font-size: 20rpx;
    /* margin-top: 20rpx; */
    margin-left: 10rpx;
    color: #999;
}
.demo1 {
  text-align: center;
  width: 750rpx;
  background: #fff;
  overflow: auto;
  z-index: 999;
  position: relative;
  top: 0;
  border-radius: 50rpx;
}
.demo1 .time {
  text-align: center;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  /* margin-top:10rpx; */
  margin-top: 67rpx;
  /* margin-top:198rpx; */
}

.demo1 .time.price {
  width: 555rpx;
  margin: 0 auto;
  display: block;
  padding: 12rpx 10rpx;
  /* border-top: 1px solid #f2f2f2; */
