.demo1 .Label2> view.active{
    border:1px solid #e5c478 !important;
}
.demo1 .confirm {
  width: 420rpx;
  height: 70rpx;
  margin: 40rpx auto;
  border-radius: 35rpx;
  display: flex;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
}

.demo1 .confirm>view:nth-child(1) {
  width: 200rpx;
  height: 70rpx;
  border-radius: 35rpx 0 0 35rpx;
  background: #ddd;
  border: none;
}

.demo1 .confirm>view:nth-child(2) {
  width: 200rpx;
  height: 70rpx;
  border-radius: 0rpx 35rpx 35rpx 0;
  background: #E5C478;
  color: white;
}
.releaseBtn {
    height: 300rpx;
}

.releaseBtn {
    display: block;
    width: 200rpx;
    height: 70rpx;
    color: #fff;
    background-color: #e5c478;
    text-align: center;
    line-height: 70rpx;
    border-radius: 35rpx;
    margin: 120rpx auto 0;
}
.van-checkbox__icon {
    display: block;
    font-size: 14px;
    width: 16px!important;
    height: 16px !important;
    color: transparent;
    text-align: center;
    box-sizing: border-box;
    border: 1px solid #e5e5e5;
    transition: 0.2s;
}
.van-icon.van-icon.van-icon-success.van-icon-success{
    line-height: 10px!important;
}