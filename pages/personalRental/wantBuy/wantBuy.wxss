}

.demo1 .Label {
  text-align: left;
  overflow: hidden;
  font-size: 24rpx;
  margin-top: 15rpx;
}

.demo1 .Label> view {
  width: 143rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #eeeeee;
  /* border-radius: 5rpx; */
  float: left;
  border:1px solid #eeeeee;
