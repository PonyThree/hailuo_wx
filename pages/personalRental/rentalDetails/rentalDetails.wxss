/* pages/personalRental/rentalDetails/rentalDetails.wxss */
page{

   background:#ffffff !important;
}
.rentalDels{
    width: 750rpx;
    background-color: #ffffff;
    border-top: 1px solid #eeeeee;
}
.projectBanner{
    width:750rpx;
    margin:0 auto;
    overflow: hidden;
    height:360rpx;
    
}
.projectBanner image{
    display: block;
    width: 100%;
    /* width: 750rpx;
    height: 320rpx; */
}
.rentRelease{
    width: 750rpx;
    height: auto;
    background-color: #ffffff;
}
.rentRelease >text:nth-child(1){
    display: block;
    margin-top: 35rpx;
    margin-bottom: 28rpx;
    font-size: 48rpx;
    color: #333333;
    font-weight: 500;
    margin-left: 24rpx;
}
.rentRelease >text:nth-child(1){
    font-size: 48rpx;
    color: #333333;
    font-weight: 500;
}
.rentRelease .carInfo{
    margin-left: 24rpx;
}

.rentRelease .carInfo view{
    display: flex;
    align-items: center;
    padding:10rpx 0;
    height: auto;
}
.rentRelease .carInfo view.desc{
    display: flex;
    align-items: flex-start;
    width: 702rpx;
    padding: 20rpx 0;
    margin-right: 20rpx;
}
.carInfo view.desc .descTil{
    width: 180rpx;
    display: block;
    font-size: 24rpx;
    color:#777777;
}
.carInfo view.desc .descTxt{
    width: 550rpx;
    font-size:30rpx;
    padding: 0;
    color: #333333;
}
.carInfo view.right>text:nth-child(1){
    display: inline-block;
    width: 150rpx;
    font-size: 24rpx;
    color: #777777;
    margin-right:40rpx;
}
.scroll-view_H{
    width: 220rpx;
    height: 34rpx;
    overflow:hidden;
}
.tagList1{
    width: 570rpx;
    height: 34rpx;
    font-size: 20rpx;
    overflow-x: auto;
    white-space: nowrap;
}
.tagList1 text{
    height: 34rpx;
    line-height: 34rpx;
    display: inline-block;
    padding:0 10rpx;
    margin-right: 10rpx;
    background-color: #F0F0F0;
}
/* 联系人电话 */
.relationPer{
    width: 750rpx;
    height: 70rpx;
    margin-top: 90rpx;
    display: flex;
    align-items: center;
}
.relationPer image{
    margin-left: 114rpx;
}
.relationPer text:nth-child(1){
    font-size: 28rpx;
    color: #333333;
}
.relationPer text.phone{
    width: 260rpx;
    line-height: 70rpx;
    text-align: center;
    border-radius: 35rpx;
    font-size: 30rpx;
    color: #ffffff;
    background-color: #e5c478;
    margin-left: 70rpx;
}