/* pages/personalRental/myRelease/myRelease.wxss */

page {
    background: #f2f2f2 !important;
}

.myRelease {
    width: 750rpx;
    border-top: 1px solid #eee;
}

/* 我的发布列表 */

.rentList {
    width: 750rpx;
    height: auto;
    margin-top: 20rpx;
    /* background-color:#F2F2F2;  */
}

.i-swipeout-wrap {
    background-color: #aaf;
}

.i-swipeout-demo-item {
    width: 750rpx;
    height: 360rpx;
    background-color: #aaf;
}

.i-swipeout-des {
    width: 750rpx;
    box-sizing: border-box;
    height: 360rpx;
    /* margin-top:20rpx; */
    overflow: hidden;
    /* margin-top:30rpx; */
    background-color: #fff;
}

/* 头部 */

.i-swipeout-des .top {
    width: 704rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    margin: 0 auto;
    border-bottom: 1px solid #eee;
    /* background-color: pink; */
}

.top .myInfo {
    display: flex;
}

.i-swipeout-des  .myPro {
    /* display: flex; *//* align-items: center; */
}

.myPro text {
    display: block;
}

.dataTime {
    float: right;
}

.dataTime text {
    font-size: 24rpx;
    color: #777;
}

/* 中间信息 */

.renInfo {
    position: relative;
    width: 704rpx;
    height: 256rpx;
    margin-left: 30rpx;
    padding-left:30rpx;
    /* background-color: pink; */
}
/* 求租信息 */
.renInfo >view:nth-child(1) {
    /* width:auto; */
    /* background-color: pink; */
    padding: 14rpx 0;
    font-size: 36rpx;
}

.renInfo >view:nth-child(1) >text {
    color: rgb(51, 51, 51);
    height: 36rpx;
    font-weight:bold;
}
/* 期望信息 */
.info >view:nth-child(2) {
    width:704rpx;
    font-size: 36rpx;
}
.carInfo{
    /* display: flex; */
    width: 702rpx;
    height: 200rpx;
    /* background-color: pink; */
}
.carInfo view{
    display: flex;
    align-items: center;
    /* background-color: #ff0; */
}
.carInfo .view2{
    height: 50rpx;
    margin-bottom:10rpx;
    
}
.carInfo view.right>text:nth-child(1){
    font-size: 24rpx;
    color: #777777;
    margin-right:40rpx;
}
.scroll-view_H{
    width: 220rpx;
    height: 34rpx;
    overflow:hidden;
}
.tagList1{
    width: 210rpx;
    height: 34rpx;
    font-size: 20rpx;
    overflow-x: auto;
    white-space: nowrap;
}
.tagList1 text{
    height: 34rpx;
    line-height: 34rpx;
    display: inline-block;
    padding:0 10rpx;
    margin-right: 10rpx;
    color:#999999;
    background-color: #F0F0F0;
}

/* 出售中间信息 */
.saleList{
    width: 750rpx;
    height: auto;
    margin-top:20rpx;
    background-color: #aaf;
}
.carInfo1{
    position: relative;
    width: 702rpx;
    height: 200rpx;
    /* background-color: #aaf; */
}
.carInfo1 .sale{
    position: absolute;
    right: 0;
    width: 450rpx;
    /* height: 200rpx; */
    /* background-color: pink; */
}
.renInfo1 >view:nth-child(1) {
    /* width:auto; */
    /* background-color: pink; */
    padding: 14rpx 0;
    font-size: 36rpx;
    margin-left:50rpx;
}

.renInfo1 >view:nth-child(1) >text {
    color: rgb(51, 51, 51);
    height: 36rpx;
    font-weight:bold;
}
.renInfo1 .saleInfo{
    display: flex;
    width: 702rpx;
    margin-left:50rpx;
    height: auto;
}
.saleInfo .saleCarInfo{
    height: auto;
}
.saleInfo .saleCarInfo{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.saleCarInfo text:nth-child(1){
    font-size: 30rpx;
    color: #333333;
}
.saleCarInfo text:nth-child(2){
    font-size: 24rpx;
    color: #333333;
}
.saleCarInfo text:nth-child(3){
    font-size: 28rpx;
    color: #333333;
}