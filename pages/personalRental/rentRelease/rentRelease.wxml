<!--pages/personalRental/rentCarEdit/rentCarEdit.wxml-->
<view class="rentCarEdit">
    <!-- 头部图片上传 -->
    <rentalUpload picList="{{picList}}" bind:rentalUpload="rentalUpload" showType="{{showType}}"></rentalUpload>
    <!-- 租售信息 -->
    <view class="info">
        <view class="singleOne">
            <text>标题</text>
            <input placeholder="请填写" bindinput="getTil" maxlength='17'></input>
        </view>
        <view class="singleOne">
            <text>车位位置</text>
            <input v-model="form.location" placeholder="请填写" bindinput='getLoc' maxlength='17'></input>
        </view>
        <view class="singleOne">
            <text>车位编号</text>
            <input v-model="form.code" placeholder="请填写" bindinput='getCode'></input>
        </view>
        <view class="singleOne">
            <text>车位大小</text>
            <input placeholder="请填写" type="number" v-model="form.outsideArea" bindinput="getSize" maxlength='2'></input>
            <text style="font-size:28rpx;color:#777777;margin-left:-200rpx;">㎡</text>
        </view>
        <view style="height:{{opition==true?'180':'90'}}rpx;display:flex;align-items:center;position:relative;">
            <text>租金详情</text>
      
            <input type="number" placeholder="请填写" style="font-size:28rpx;color:#777777;margin-left:30rpx;" bindinput="getSellPrice"></input>
            <text style="font-size:28rpx;color:#777777;margin-left:-160rpx;">元/月</text>
        </view>
        <view class="farTag">
            <text class="til">意向标签</text>
            <view style="width:{{702-150}}rpx">
                <view class="tagList">
                    <view class="tagItem" wx:for="{{selectedTags}}" style="margin-bottom:10rpx" data-index="{{index}}" wx:key="{{index}}">
                        <text>{{item}}</text>
                        <image src="/image/dell.png" style="width:21rpx;height:21rpx;" catchtap='delTag' data-index="{{index}}"></image>
                    </view>
                    <view class="addTag" catchtap='showTags' style="margin-top:{{index>=3?'30':'0'}}rpx">添加标签</view>
                </view>
            </view>
        </view>
        <view class="singleOne singleSpecial" wx:if="{{show}}">
            <text>车位描述</text>
            <!-- <input placeholder="请填写" bindinput="getDescription">绝版电梯口车位,过时不候</input> -->
            <textarea bindblur="bindTextAreaBlur" auto-height placeholder="请填写"  placeholder-style='font-size:28rpx;padding-left:20rpx;color:#777777;'/>
        </view>
        <view class="singleOne">
            <text>联系人</text>
            <input bindinput="getreleaserName" style="z-index:1;" placeholder="请填写"></input>
        </view>
        <view class="singleOne">
            <text>电话号码</text>
            <input placeholder="联系人电话" bindinput="getPhone" type="number" maxlength='11'></input>
        </view>
        <view class="singleOne" style="border-bottom: 1px solid #eee; ">
            <text>区域</text>
            <text style="font-size:28rpx;color:#777777;margin-left:30rpx">{{ProjectInfo.name}}</text>
        </view>

    </view>
    <!-- 发布按钮 -->
    <view class="releaseBtn" catchtap='releaseInfo'>
        发布
    </view>
    <van-popup show="{{ showRight1 }}" position="bottom" custom-style="height: 75%;" bind:close="toggleRight1">

        <view class='demo1'>

            <view class='time price'>更多筛选</view>
            <view class='Label' wx:for='{{taglist}}' wx:key='index'>
                <text class='smallTitle' wx:if='{{item.tagRespDtos.length>0}}'>{{item.typeName}}</text>
                <view data-index='{{index1}}' catchtap='morescreen' data-title='更多筛选' wx:for='{{item.tagRespDtos}}' wx:for-index='index1' wx:key='index' data-tieleindex='{{index}}' class="{{item.isSelected?'active':''}}">
                    {{item.name}}</view>
            </view>
            <view class='confirm' style='margin-bottom:50rpx'>
                <view bindtap='cancle'>取消</view>
                <view catchtap='corfim' bindtap='zhuan'>确定</view>
            </view>

        </view>
    </van-popup>
    <view style="height:50rpx;"></view>
</view>