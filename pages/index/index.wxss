/* pages/index/index.wxss */

/* 顶部搜索 */

page {
  /* background: #f8f8f8; */
  width: 686rpx;
  background-color: #ffffff !important;
  padding: 0 32rpx
}

/* 首页banner */
.projectBanner{
    width:686rpx;
    overflow: hidden;
    height: 260rpx;
    border-radius:5rpx;
    position: relative
}
.projectBanner swiper{
  width: 100%;
  height: 260rpx;
  border-radius:5rpx;
}

swiper-item {
  width: 100%;
 height: 260rpx;
  border-radius:5rpx;


}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
   border-radius:5rpx;
 
}
.dots{ 
  position: absolute;
  right: 40rpx; 
  bottom: 20rpx; 
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  margin: 0 10rpx; 
  width: 14rpx; 
  height: 14rpx; 
  background: #fff; 
  border-radius: 8rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  width: 35rpx; 
  background: #FFD46A !important ; 
}

/* 公告 */

.hot {
  margin-top: 37rpx;
  width: 686rpx;
  height: 76rpx;
  font-size: 24rpx;
  border-top: 1rpx solid #EBEBEB;
  border-bottom: 1rpx solid #EBEBEB;
  line-height: 76rpx;
  display: flex;
}
.hot>text{
  font-weight: 600
}
.hot  view.gonggaoTxt{
    overflow: hidden;
    margin-left: 30rpx

}
.hot image {
  width: 180rpx;
  height: 32rpx;
  margin-right: 20rpx;
  margin-top:3rpx;
}

.hot swiper {
  height: 76rpx;
  width: 90%;
  line-height: 76rpx
}

.hot swiper view {
  height: 76rpx;
  width: 100%;
  text-overflow: ellipsis;
  color: #666666;
  font-size: 24rpx;
}
/* 九宫格 */
.navigation {
  width: 100%;
  overflow: hidden;
  padding-top:40rpx;
  font-size: 24rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
  box-shadow:0 10rpx 16rpx rgba(46, 45, 45,.1);
}

.navigation image {
  width: 80rpx;
  height: 80rpx;
  padding-bottom: 20rpx;
}

.navigation>view {
  width: 96rpx;
  float: left;
  margin-left: 45rpx;
  margin-bottom: 50rpx;
  text-align: center;
}

.navigation>view:nth-child(n+6){
    margin-bottom: 0
}
/* 推荐 */

.recommend {
  width: 702rpx;
  height: 120rpx;
  margin:40rpx auto 0;
  background-image: url(https://www.china185.com/fileService/group1/M00/00/4B/rBEAA104E-2AW6iCAABSEYc9dBk491.png);
  border-radius: 10rpx;
  margin-left: 24rpx;
  background-size: 100% 100%;
  /* border:1rpx solid #ddd; */
  box-shadow:0 0rpx 16rpx rgba(229, 196, 120,.2);
}

/* 合作项目 */

.cooperation {
  width: 686rpx;
  height: 142rpx;
  /* background-color: yellowgreen; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
  font-weight: bold;
}

.cooperation_project {
  width: 686rpx;
  height: 310rpx;
  background: white;
  border-radius: 10rpx;
  overflow-x: auto;
  white-space: nowrap;
  /* background-color: green; */
}

.cooperation_project view.listItem{
  width:292rpx;
  height: 100%;
  background-size:cover;
  border-radius: 10rpx;
  margin-right:18rpx;
  text-align: left;
  display: inline-block;
  overflow: hidden;
  /* background-color: pink; */
}
.cooperation_project view.listItem image{
    width:100%;
    height: 200rpx;
    border-radius:10rpx;
}
.cooperation_project view.listItem .desc{
    width: 240rpx;
    height:90rpx;
    margin-top:-2rpx;
}
.projectName{
    display:block;
    width:240rpx;
    height:40rpx;
    margin-top:15rpx;
    font-size:32rpx;
    line-height: 40rpx;
    color:#1B1B1B;
    font-weight: bold;
}
.address{
    width:240rpx;
    height:30rpx;
    margin-top:2rpx;
    color:#757575;
    font-size:26rpx;
    line-height: 30rpx;
}
.f30{
    font-size:38rpx;
    color:#333333;
}
/* 热门主题 */

.soft {
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  overflow: hidden
}
.soft view {
  width: 218rpx;
  height: 141rpx;
  float: left;
   margin-right:15rpx; 
  border-radius: 10rpx;
  background-position: center;
  background-size: cover;
}
.soft view:last-child{
   margin-right:0rpx; 
}

.projectList{
    font-weight:bold;
    width:686rpx;
    margin-top:80rpx;
    height:80rpx;
    margin-bottom:20rpx;
}
.projectList text:nth-child(2){
    float:right;
    line-height: 80rpx;
    margin-top:1rpx;
}
.pf30{
    font-size:38rpx;
    line-height: 80rpx;
    font-weight: bold;
    color:#333333;
}
.f28.f153{
    font-size:30rpx;
    font-weight: normal;
    color:rgb(153,153,153);
}
.getLocation{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 60rpx;
    font-size: 30rpx;
    color: #333333;
    background-color: #ffffff;
    padding-bottom: 50rpx;
}
.getLocation image{
    width: 30rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.More{
  width: 371rpx;
  height: 72rpx;
  border-radius: 31rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 26rpx;
  border: 3rpx solid #E9E9E9;
  font-weight: 600;
  margin-left: 158rpx;
  margin-top: 36rpx

