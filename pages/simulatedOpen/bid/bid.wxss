/* 开盘倒计时样式 */
.countDown{
    display: flex;
    justify-content: center;
    align-items: center;
    width:750rpx;
    height:70rpx;
    font-size:24rpx;
    line-height: 24rpx;
    color:rgb(169,33,18);
    background-color: rgb(232,228,209);

}
.countDown image{
    width:27rpx;
    height:27rpx;
    margin-right:10rpx;
}
.countDown > view.time{
   margin-left:10rpx;
}
view.time .timeDot{
    margin:0 5rpx;
}
