/* pages/activity/activityList/activityList.wxss */

page {
  background-color: #f5f5f5 !important;
}

.actList {
  width: 750rpx;
}

/* 标题 */

.til {
  width: 686rpx;
  margin: 30rpx auto 0;
}

.til >text {
  width: 120rpx;
  height: 42rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 700;
  color: rgba(27, 27, 27, 1);
}

.til >view {
  width: 416rpx;
  height: 37rpx;
  opacity: 1;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 12rpx;
  margin-bottom: 14rpx;
  color: rgba(173, 173, 173, 1);
}

/* 列表样式 */

.list {
  width: 686rpx;
  margin: 0 auto;
}

.list .item {
  display: flex;
  align-items: center;
  width: 686rpx;
  height: 210rpx;
  opacity: 1;
  overflow: hidden;
  margin: 26rpx auto 24rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);
}

.list .item:nth-child(1) {
  margin: 40rpx auto 24rpx;
}

/* 列表内容 */

.item >image {
  display: block;
  width: 180rpx;
  height: 150rpx;
  opacity: 1;
  margin: 30rpx 20rpx;
  background: rgba(0, 0, 0, 0);
}

.item view.content {
  width: 456rpx;
  /* height: 140rpx; */
  /* background-color: #aaf; */
}

.content .info {
  /* display: flex;
  flex-direction: column;
  justify-content:space-around; */
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.info .actil {
  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height:60rpx;
  opacity: 1;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: rgba(51, 51, 51, 1);
  line-height: 60rpx;
}

.info .time {
  width: 100%;
  height: 33rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(250, 109, 57, 1);
  line-height: 33rpx;
  /* margin-bottom: 20rpx; */
}

.info .num {
  width: 100%;
  height: 33rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(171, 171, 171, 1);
  line-height: 33rpx;
}
